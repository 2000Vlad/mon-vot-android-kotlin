<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Login" parent="AppTheme.NoActionBar">
        <item name="android:colorControlNormal">@color/textLight</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="BaseButtonCommon">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonEmbeddedCommon" parent="BaseButtonCommon">
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/button_text_embedded</item>
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <style name="InputLogin" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/background_input_login</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/login_text_size</item>
    </style>

</resources>
