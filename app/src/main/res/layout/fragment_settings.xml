<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rectangle"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/backgroundLight"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo">

        <TextView
            style="@style/Text.Title.Big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:text="@string/settings_mission" />

        <TextView
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/margin"
            android:text="@string/settings_content" />

        <TextView
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_btn"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/margin_settings_btn"
            android:background="@drawable/selector_bg_btn"
            android:drawableStart="@drawable/ic_single_copy"
            android:drawablePadding="@dimen/padding_settings_icon"
            android:gravity="center_vertical"
            android:minHeight="@dimen/input_height"
            android:paddingStart="@dimen/padding_settings_btn"
            android:paddingEnd="@dimen/padding_settings_btn"
            android:text="@string/settings_download_single"
            android:textColor="@color/purple" />

        <TextView
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_btn"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/margin_settings_btn"
            android:background="@drawable/selector_bg_btn"
            android:drawableStart="@drawable/ic_single_folded"
            android:drawablePadding="@dimen/padding_settings_icon"
            android:gravity="center_vertical"
            android:minHeight="@dimen/input_height"
            android:paddingStart="@dimen/padding_settings_btn"
            android:paddingEnd="@dimen/padding_settings_btn"
            android:text="@string/settings_download_multiple"
            android:textColor="@color/purple" />

        <TextView
            style="@style/Text.Title.Big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/xbig_margin"
            android:layout_marginEnd="@dimen/margin"
            android:text="@string/settings_actions" />

        <TextView
            android:id="@+id/tv_contact"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_btn"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/margin_settings_btn"
            android:background="@drawable/selector_bg_btn"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:minHeight="@dimen/input_height"
            android:paddingStart="@dimen/padding_settings_btn"
            android:paddingEnd="@dimen/padding_settings_btn"
            android:text="@string/settings_contact" />

        <TextView
            android:id="@+id/tv_policy"
            style="@style/Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_settings_btn"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/margin_settings_btn"
            android:background="@drawable/selector_bg_btn"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:gravity="center_vertical"
            android:minHeight="@dimen/input_height"
            android:paddingStart="@dimen/padding_settings_btn"
            android:paddingEnd="@dimen/padding_settings_btn"
            android:text="@string/settings_privacy_policy" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>