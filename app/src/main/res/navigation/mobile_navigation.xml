<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_forms">

    <fragment
        android:id="@+id/nav_forms"
        android:name="ro.code4.monitorizarevot.ui.forms.FormsFragment"
        android:label="@string/menu_forms"
        tools:layout="@layout/fragment_forms">
        <action
            android:id="@+id/action_nav_forms_to_nav_questions"
            app:destination="@id/nav_questions" />
    </fragment>


    <fragment
        android:id="@+id/nav_guide"
        android:name="ro.code4.monitorizarevot.ui.guide.GuideFragment"
        android:label="@string/menu_guide"
        tools:layout="@layout/fragment_guide" />

    <fragment
        android:id="@+id/nav_questions"
        android:name="ro.code4.monitorizarevot.ui.forms.questions.QuestionsListFragment"
        tools:layout="@layout/fragment_list" />
</navigation>